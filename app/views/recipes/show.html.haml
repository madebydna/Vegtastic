%h3
  = @recipe.title
%p
  %b Servings:
  = @recipe.servings
%h5 Ingredients  
-@recipe.ingredients.each do |i|
  %p
    ="#{i.amount} #{i.unit} #{i.name}, #{i.instructions}"

%p
  %b Description:
  = @recipe.description
%p
  %b Directions:
  = @recipe.directions

= link_to 'Edit', edit_recipe_path(@recipe)
\|
= link_to 'Back', recipes_path
