.fields
  %ol
    = f.label :amount
    = f.text_field :amount
  %ol
    = f.label :unit
    = f.select :unit, Ingredient::UNITS, :include_blank => true
  %ol
    = f.label :name
    = f.text_field :name
  %ol
    = f.label :instructions
    = f.text_field :instructions
  %ol
    -if f.object.new_record?
      =link_to("remove", "javascript:void(0)", :class => "remove_nested_fields")
    -else
      =link_to_remove_fields("remove", f)
